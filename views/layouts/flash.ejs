<% if(success && success.length){ %>
    <div  id="success-alert"  class="alert alert-success alert-dismissible fade show col-4 offset-4" role="alert">
    <%= success %>
  </div>

    <% } %>
<script>
     setTimeout(() => { 
        var alertDiv = document.getElementById('success-alert');
        if (alertDiv) {
            alertDiv.remove();
        }
 }, 1500);
 </script>


<% if(error && error.length){ %>
    <div  id="success-alert"  class="alert alert-danger alert-dismissible fade show col-4 offset-4" role="alert">
    <%= error %>
  </div>

    <% } %>
<script>
     setTimeout(() => { 
        var alertDiv = document.getElementById('success-alert');
        if (alertDiv) {
            alertDiv.remove();
        }
 }, 1500);
 </script>