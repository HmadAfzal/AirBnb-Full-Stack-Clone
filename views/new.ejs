<% layout("/layouts/boilerplate.ejs") %>

    <div class="row formnew">
        <div class="col-8 offset-2">
            <h1>Add New</h1>
            <form action="/listings" method="post" class="newform needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <div> <label for="title" class="form-label">Title</label><input type="text" name="title"
                            placeholder="Title" class="form-control" required>
                            <div class="valid-feedback">
                                Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please Enter a Title!
                    </div>
                            
                              </div>
                </div>
                <div class="mb-3">
                    <div> <label for="image" class="form-label">Upload Image</label><input type="file" name="image" class="form-control"></div>
                </div>
                <div class="mb-3">
                    <div> <label for="description" class="form-label">Description</label> <textarea name="description"
                            rows="3" placeholder="Description" class="form-control" required></textarea>
                        <div class="invalid-feedback">
                            Description Required!
                    </div></div>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div> <label for="Price" class="form-label">Price</label> <input type="number" name="price"
                                placeholder="Price" class="form-control" required>
                                
                            <div class="invalid-feedback">
                               Price Required!
                        </div></div>
                    </div>
                    <div class="col-md-8 mb-3">
                        <div> <label for="country" class="form-label">Country</label> <input type="text" name="country"
                                placeholder="country" class="form-control" required>
                            <div class="invalid-feedback">
                                Valid country required!
                        </div></div>
                    </div>
                </div>
                <div class="mb-3">
                    <div> <label for="location" class="form-label">Location</label> <input type="text" name="location"
                            placeholder="Location" class="form-control" required>
                        <div class="invalid-feedback">
                            Enter Correct Location!
                    </div> </div>
                </div>

                <button>Add</button>
            </form>
        </div>
    </div>